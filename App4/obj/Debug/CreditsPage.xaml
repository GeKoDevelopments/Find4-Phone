            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Athanasopoulos" VerticalAlignment="Center" FontSize="48" Foreground="Black"/>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Georgios" VerticalAlignment="Center" FontSize="48" Foreground="Black"/>
            <TextBlock />
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="And" VerticalAlignment="Center" FontSize="48" Foreground="Black"/>
            <TextBlock />
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Karatsenidis" VerticalAlignment="Center" FontSize="48" Foreground="Black" />
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Konstantinos" VerticalAlignment="Center" FontSize="48" Foreground="Black"/>
        </StackPanel>
    </Grid>

</Page>

